@using admin_panel.Models
@model admin_panel.Models.CountViewModel
@{
    Layout = "_Dashboard";
    ViewData["Title"] = "Admin Page";
}
@section Styles { 
    <link href="~/css/myCss.css" rel="stylesheet">
}

<h1 style="text-align: center;">Sherlock House / Admin Panel</h1>

<div class="imagem" style="background-color: black;">
    <img src="~/logo.webp" alt="">
</div>
<hr>
<div class="row">
    <div class="col-md-10 mt-3">
        <p>
            Ürün Bilgi / <a asp-controller="Admin" asp-action="Menu" asp-route-category="hepsi" class="btn btn-info btn-sm">Tüm Ürünleri Göster</a>
        </p>
    </div>
    <div class="col-md-2 mt-3">
        <a asp-controller="Create" asp-action="Index" class="btn btn-primary">Yeni Ürün Ekle</a>
        <a asp-controller="Create" asp-action="Kampanya" asp-route-category="kampanya" class="btn btn-primary">Kampanya Ekle</a>
    </div>
    <div class="mt-3"><p> (Ürünler <b>güncellemek</b> veya <b>silmek</b> isterseniz, yan taraftaki kategoriler ile ürün seçimi yapınız.)</p></div>
    
</div>
